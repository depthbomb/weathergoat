generator client {
  provider     = "prisma-client"
  runtime      = "bun"
  output       = "../src/db/generated"
  moduleFormat = "esm"
}

datasource db {
  provider = "sqlite"
}

model AlertDestination {
  id            Int     @id @default(autoincrement())
  snowflake     String  @unique
  latitude      String
  longitude     String
  zoneId        String
  countyId      String
  guildId       String
  channelId     String
  autoCleanup   Boolean @default(true)
  radarImageUrl String?
  pingOnSevere  Boolean @default(false)

  @@index([guildId])
}

model AutoRadarMessage {
  id            Int    @id @default(autoincrement())
  snowflake     String @unique
  guildId       String
  channelId     String
  messageId     String @unique
  location      String
  radarStation  String
  radarImageUrl String

  @@index([guildId])
}

model ForecastDestination {
  id            Int     @id @default(autoincrement())
  snowflake     String  @unique
  latitude      String
  longitude     String
  guildId       String
  channelId     String
  messageId     String  @unique
  radarImageUrl String?

  @@index([guildId])
}

model SentAlert {
  id        Int     @id @default(autoincrement())
  alertId   String  @unique
  guildId   String
  channelId String
  messageId String
  json      String?

  @@index([guildId, channelId, alertId])
}

model VolatileMessage {
  id        Int      @id @default(autoincrement())
  guildId   String
  channelId String
  messageId String   @unique
  expiresAt DateTime

  @@index([guildId])
  @@index([expiresAt])
}
