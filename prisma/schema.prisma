generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AlertDestination {
  id            String  @id @default(uuid())
  latitude      String
  longitude     String
  zoneId        String
  countyId      String
  guildId       String
  channelId     String
  autoCleanup   Boolean @default(true)
  radarImageUrl String?
  pingOnSevere  Boolean @default(false)
}

model AutoRadarMessage {
  id            String  @id @default(uuid())
  uuid          String  @unique
  guildId       String
  channelId     String
  messageId     String?
  location      String
  radarStation  String
  radarImageUrl String
}

model ForecastDestination {
  id            String  @id @default(uuid())
  uuid          String  @unique
  latitude      String
  longitude     String
  guildId       String
  channelId     String
  messageId     String  @unique
  radarImageUrl String?
}

model SentAlert {
  id        String  @id @default(uuid())
  alertId   String  @unique
  guildId   String
  channelId String
  messageId String
  json      String?
}

model VolatileMessage {
  id        String   @id @default(uuid())
  guildId   String
  channelId String
  messageId String
  expiresAt DateTime
}
